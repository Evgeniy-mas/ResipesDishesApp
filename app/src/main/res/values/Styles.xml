<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleTitle14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="cornerRadius">@dimen/main_space_half_8</item>
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="android:paddingHorizontal">@dimen/main_space_half_8</item>
    </style>

    <style name="StyleTextCategory" parent="TextAppearance.AppCompat">
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textSize">@dimen/text_size_cat</item>
        <item name="android:textColor">@color/text_category</item>
        <item name="android:layout_marginTop">@dimen/fragment_margin_top_cat</item>
        <item name="android:layout_marginEnd">@dimen/fragment_margin_end</item>
        <item name="android:layout_marginStart">@dimen/main_space_16</item>
        <item name="android:padding">@dimen/padding_text_cat</item>

    </style>

    <style name="StyleDescriptionCard" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_variable</item>
        <item name="android:textSize">@dimen/text_size_description_card</item>
        <item name="android:textColor">@color/text_description</item>
    </style>

    <style name="StyleCategoryCard" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/text_category</item>
        <item name="fontFamily">@font/montserrat_alternates_semi_bold</item>


    </style>


</resources>