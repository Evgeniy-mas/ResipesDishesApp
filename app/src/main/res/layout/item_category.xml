<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/main_space_half_8"
    android:layout_marginBottom="@dimen/main_space_16"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/main_space_half_8"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_card_height"
            android:contentDescription="categoryImage"
            android:scaleType="centerCrop"
            tools:src="@drawable/burger_tools" />

        <TextView
            style="@style/StyleCategoryCard"
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/main_space_half_8"
            android:layout_marginVertical="@dimen/main_space_half_8"
            android:lineHeight="@dimen/main_space_16"
            tools:text="Категория" />


        <TextView
            android:id="@+id/tvDescription"
            style="@style/StyleDescriptionCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/main_space_half_8"
            android:layout_marginVertical="@dimen/main_space_half_8"
            android:lineHeight="@dimen/main_space_16"
            android:textSize="12sp"
            tools:text="Описание категории" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
